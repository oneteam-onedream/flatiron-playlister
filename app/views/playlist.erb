<style type="text/css">a {text-decoration: none}</style>
<% if @current_song %>
  Now playing: <%= @current_song.song_name %><br />
<% end %>
<ul>

  <% if @songs %>
    <% @songs.each_with_index do |song, i| %>
      <% if i < 15 %>
        <li> <%= song.upvotes %> - <a href="/songs/<%= song.id %>/upvote">  Û©  </a>   <%= song.song_name %>  </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
<br>

<form action="/spotify" method="get">
  <input type="text" name="q" placeholder="enter something">
  <input type="submit" value="search">
</form>

<% if @queries %>
  <% @queries.each do |query| %>
    <form action="/playlist/add" method="post">
      <input type="hidden" name="song[song_name]" value="<%= query[1]["song_name"]%>">
      <input type="hidden" name="song[artist_name]" value="<%= query[1]["artist_name"]%>">
      <input type="hidden" name="song[spotify_id]" value="<%= query[1]["uri"]%>">
      <input type="submit" value="<%= query[1]["song_name"]%>" >
    </form>
  <% end %>
<% end %>

